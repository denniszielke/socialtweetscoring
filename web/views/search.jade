extends layout

block content
  h1 #{title}
  h4 #{refreshDate}
  br

  input(type="text",autocomplete="off", autofocus="autofocus", placeholder="Inser search query", value='#{terms}')#query.search

  ul#facets
    if (typeof facets != "undefined")
      each facet in facets
        li.facet #{facet.value} (#{facet.count})
  br

  table.table.table-striped.table-bordered
    tr
      td 
      td Name
      td Social points
      td Tweet score
      td Text
      td Location
    if (typeof tweets === "undefined")
      tr
        td No tweets
    else
      each tweet in tweets
        tr
          td <img src=#{tweet.profileUrl}>
          td #{tweet.username}
          td #{tweet.points}
          td #{tweet.score}
          td #{tweet.text}
          td #{tweet.location}

    script(src='/searcher.js')